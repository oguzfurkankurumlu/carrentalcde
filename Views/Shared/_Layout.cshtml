<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WissenRent</title>

    <!-- Stil Dosyanızı Buraya Ekleyin -->
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/carrentalcde.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>
    @if (ViewData["HideTopbar"] == null || !(bool)ViewData["HideTopbar"] == false)
    {
        <!-- Topbar Partial, Header'dan önce gelecek -->
        @await Html.PartialAsync("_Topbar")
    }


    <header>
        @if (ViewData["HideNavbar"] == null || !(bool)ViewData["HideNavbar"] == false)
        {
            @await Html.PartialAsync("_Navbar") <!-- Navbar burada gösteriliyor -->
        }
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    @if (ViewData["HideFooter"] == null || !(bool)ViewData["HideFooter"] == false)
    {
        @await Html.PartialAsync("_Footer")
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
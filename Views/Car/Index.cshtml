@model List<CarDTO>

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Araç Listesi - Admin Paneli</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Genel stil */
        body {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        /* Sol Menü */
        .sidebar {
            height: 100vh;
            width: 220px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
            transition: 0.3s;
            overflow-y: auto;
        }

        /* Sol Menü Linkleri */
        .sidebar a {
            color: white;
            padding: 10px 15px;
            text-decoration: none;
            display: block;
            font-size: 18px;
        }

        .sidebar a:hover {
            background-color: #575d63;
        }

        /* Sağ İçerik Paneli */
        .content-wrapper {
            margin-left: 220px;
            padding: 20px;
            max-width: calc(100% - 220px);
            overflow-x: auto;
        }

        /* Responsive Tasarım */
        @@media(max-width: 768px) {
            .sidebar {
                width: 200px;
            }

            .content-wrapper {
                margin-left: 200px;
                max-width: calc(100% - 200px);
            }
        }

        @@media(max-width: 480px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }

            .content-wrapper {
                margin-left: 0;
                max-width: 100%;
            }
        }
    </style>
</head>

<body>

    <!-- Sol Menü (Sidebar) -->
    <div class="sidebar">
        <h4 class="text-center text-white">Admin Paneli</h4>
        <a href="@Url.Action("UserList", "Admin")">Kullanıcılar</a>
        <a href="@Url.Action("AddUser", "Admin")">Yeni Kullanıcı Ekle</a>
        <a href="@Url.Action("Index", "Car")">Araçlar</a>
    </div>

    <!-- Sağ Panel (Ana İçerik) -->
    <div class="container-fluid content-wrapper" style="margin-top: 30px; padding: 20px; padding-right: 20px;">
        <h2 class="mb-4">Araç Listesi</h2>

        <!-- Araçlar Tablosu -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Marka</th>
                        <th>Model</th>
                        <th>Yıl</th>
                        <th>Fiyat</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var car in Model)
                    {
                        <tr>
                            <td>@car.CarId</td>
                            <td>@car.Make</td>
                            <td>@car.Model</td>
                            <td>@car.Year</td>
                            <td>@car.PricePerDay</td>
                            <td>@(car.IsAvailable.HasValue && car.IsAvailable.Value ? "Mevcut" : "Dolu")</td>
                            <td>
                                <!-- Düzenle Butonu -->
                                <a href="@Url.Action("Edit", new { id = car.CarId })" class="btn btn-warning btn-sm">Düzenle</a>
                                <!-- Detay Butonu -->
                                <a href="@Url.Action("Details", new { id = car.CarId })" class="btn btn-info btn-sm">Detay</a>
                                <!-- Silme Butonu -->
                                <a href="@Url.Action("Delete", new { id = car.CarId })" class="btn btn-danger btn-sm" 
                                   onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Yeni Araç Ekle Butonu -->
        <a href="@Url.Action("Create")" class="btn btn-primary mt-3">Yeni Araç Ekle</a>
    </div>

    <!-- Bootstrap JS, Popper.js, ve jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>

</html>

@* @model CarDTO

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Araç Düzenle - Admin Paneli</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        .sidebar {
            height: 100vh;
            width: 220px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
            transition: 0.3s;
            overflow-y: auto;
        }

        .sidebar a {
            color: white;
            padding: 10px 15px;
            text-decoration: none;
            display: block;
            font-size: 18px;
        }

        .sidebar a:hover {
            background-color: #575d63;
        }

        .content-wrapper {
            margin-left: 220px;
            padding: 20px;
            max-width: calc(100% - 220px);
            overflow-x: auto;
        }

        @@media(max - width: 768px) {
                .sidebar {
                    width: 200px;
                }

                .content-wrapper {
                    margin-left: 200px;
                    max-width: calc(100% - 200px);
                }
            }

            @@media(max - width: 480px) {
                    .sidebar {
                        width: 100%;
                        height: auto;
                        position: relative;
                    }

                    .content-wrapper {
                        margin-left: 0;
                        max-width: 100%;
                    }
                }
            </style>
        </head>

        <body>

            <div class="sidebar">
                <h4 class="text-center text-white">Admin Paneli</h4>
                <a href="@Url.Action("UserList", "Admin")">Kullanıcılar</a>
                <a href="@Url.Action("AddUser", "Admin")">Yeni Kullanıcı Ekle</a>
                <a href="@Url.Action("Index", "Car")">Araçlar</a>
                <a href="@Url.Action("Rentals", "Admin")">Kiralama Listesi</a>

            </div>

            <div class="container-fluid content-wrapper" style="margin-top: 30px;">
                <h2>Araç Düzenle</h2>
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" name="CarId" value="@Model.CarId" />

                    <div class="form-group">
                        <label for="Brand">Marka:</label>
                        <select id="Brand" name="Brand" class="form-control" required>
                            <option value="Toyota" selected="@(Model.Brand == "Toyota")">Toyota</option>
                            <option value="Honda" selected="@(Model.Brand == "Honda")">Honda</option>
                            <option value="Ford" selected="@(Model.Brand == "Ford")">Ford</option>
                            <option value="BMW" selected="@(Model.Brand == "BMW")">BMW</option>
                            <option value="Audi" selected="@(Model.Brand == "Audi")">Audi</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="Model">Model:</label>
                        <input type="text" id="Model" name="Model" value="@Model.Model" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="Year">Yıl:</label>
                        <input type="number" id="Year" name="Year" value="@Model.Year" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="Price">Fiyat:</label>
                        <input type="number" id="Price" name="Price" value="@Model.PricePerDay" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="Availability">Durum:</label>
                        <select id="Availability" name="Availability" class="form-control">
                            <option value="true" selected="@(Model.IsAvailable == true)">Mevcut</option>
                            <option value="false" selected="@(Model.IsAvailable == false)">Dolu</option>
                        </select>
                    </div>


                    <div class="form-group">
                        <label for="Description">Açıklama:</label>
                        <textarea id="Description" name="Description" class="form-control">@Model.Description</textarea>
                    </div>

                    <div class="form-group">
                        <label for="Color">Renk:</label>
                        <input type="text" id="Color" name="Color" value="@Model.Color" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="Mileage">Kilometre:</label>
                        <input type="number" id="Mileage" name="Mileage" value="@Model.Mileage" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="IsAirConditioned">Klima:</label>
                        <input type="hidden" name="IsAirConditioned" value="false" />
                        <input type="checkbox" id="IsAirConditioned" name="IsAirConditioned" value="true"
                            @(Model.IsAirConditioned == true ? "checked" : "") />
                    </div>

                    <div class="form-group">
                        <label for="IsAutomatic">Otomatik Vites:</label>
                        <input type="hidden" name="IsAutomatic" value="false" />
                        <input type="checkbox" id="IsAutomatic" name="IsAutomatic" value="true" @(Model.IsAutomatic == true ?
                            "checked" : "") />
            </div>

                    <div class="form-group">
                        <label for="ImageUrl">Resim:</label>
                        <input type="file" id="ImageUrl" name="ImageUrl" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <p>Mevcut Resim: <img src="@Model.ImageUrl" alt="Car Image" style="width: 150px; height: auto;" /></p>
                        }
                    </div>

                    <br />
                    <button type="submit" class="btn btn-success">Güncelle</button>
                    <a href="@Url.Action("Index", "Car")" class="btn btn-primary">Geri Dön</a>
                </form>
            </div>

            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@2.5.2/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

        </body>

        </html> *@

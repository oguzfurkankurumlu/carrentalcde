@model CarDTO

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Araç Detayı - Admin Paneli</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        .sidebar {
            height: 100vh;
            width: 220px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
            transition: 0.3s;
            overflow-y: auto;
        }

        .sidebar a {
            color: white;
            padding: 10px 15px;
            text-decoration: none;
            display: block;
            font-size: 18px;
        }

        .sidebar a:hover {
            background-color: #575d63;
        }

        .content-wrapper {
            margin-left: 220px;
            padding: 20px;
            max-width: calc(100% - 220px);
            overflow-x: auto;
        }

        /* Tablo ve Çerçeve Stili */
        .car-details-table {
            width: 100%;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            margin-top: 30px;
            font-size: 14px; /* Tabloyu biraz daha küçülttük */
        }

        .car-details-table th, .car-details-table td {
            padding: 12px; /* Hücreleri biraz daha küçük yaptık */
            text-align: left;
            vertical-align: middle;
        }

        .car-details-table th {
            background-color: #343a40;
            color: white;
        }

        /* Resim Çerçevesi */
        .car-image-container {
            text-align: center;
            max-width: 300px; /* Çerçeveyi biraz daha küçültüyoruz */
            overflow: hidden;
            border: 3px solid #ddd;
            border-radius: 8px;
            margin: 0 auto;
            padding: 5px;
            background-color: #f8f9fa;
        }

        .car-image {
            width: 100%;
            height: 100%;
            object-fit: contain; /* Resmi düzgün sığdırdık */
            transform: scale(0.8); /* Resmi "zoom out" yapmak için scale kullandık */
        }

        /* Resmin üzerine gelindiğinde büyümesini engellemek */
        .car-image-container:hover .car-image {
            transform: scale(0.8); /* Mouse ile üzerine gelince zoom olmasın */
        }

        /* Media Queries for responsiveness */
        @@media (max-width: 768px) {
            .sidebar {
                width: 200px;
            }

            .content-wrapper {
                margin-left: 200px;
                max-width: calc(100% - 200px);
            }

            .car-details-table {
                font-size: 12px; /* Tabloyu daha küçük yaptık */
            }

            .car-image-container {
                max-width: 250px; /* Çerçeve daha küçük hale geliyor */
            }
        }

        @@media (max-width: 480px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }

            .content-wrapper {
                margin-left: 0;
                max-width: 100%;
            }

            .car-details-table {
                font-size: 10px; /* Tabloyu daha küçük yaptık */
            }

            .car-image-container {
                max-width: 200px; /* Çerçeve daha küçük hale geliyor */
            }
        }
    </style>
</head>

<body>

    <!-- Sol Menü -->
    <div class="sidebar">
        <h4 class="text-center text-white">Admin Paneli</h4>
        <a href="@Url.Action("UserList", "Admin")">Kullanıcılar</a>
        <a href="@Url.Action("AddUser", "Admin")">Yeni Kullanıcı Ekle</a>
        <a href="@Url.Action("Index", "Car")">Araçlar</a>
    </div>

    <!-- Sağ İçerik -->
    <div class="container-fluid content-wrapper">
        <div class="car-details-table">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th colspan="2" class="text-center">Araç Detayları</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td rowspan="8" class="car-image-container">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Make @Model.Model" class="car-image">
                            }
                        </td>
                        <td><strong>Yıl:</strong> @Model.Year</td>
                    </tr>
                    <tr>
                        <td><strong>Fiyat:</strong> @Model.PricePerDay ₺/gün</td>
                    </tr>
                    <tr>
                        <td><strong>Durum:</strong> @(Model.IsAvailable.HasValue ? (Model.IsAvailable.Value ? "Mevcut" : "Dolu") : "Bilinmiyor")</td>
                    </tr>
                    <tr>
                        <td><strong>Renk:</strong> @Model.Color</td>
                    </tr>
                    <tr>
                        <td><strong>Yakıt Türü:</strong> @Model.FuelType</td>
                    </tr>
                    <tr>
                        <td><strong>Vites Türü:</strong> @(Model.IsAutomatic.HasValue && Model.IsAutomatic.Value ? "Otomatik" : "Manuel")</td>
                    </tr>
                    <tr>
                        <td><strong>Klima:</strong> @(Model.IsAirConditioned.HasValue ? (Model.IsAirConditioned.Value ? "Var" : "Yok") : "Bilinmiyor")</td>
                    </tr>
                    <tr>
                        <td><strong>Kilometre:</strong> @Model.Mileage km</td>
                    </tr>
                    <tr>
                        <td colspan="2"><strong>Açıklama:</strong> @Model.Description</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <a href="@Url.Action("Index", "Car")" class="btn btn-primary mt-3">Geri Dön</a>
    </div>

    <!-- Bootstrap JS, Popper.js, ve jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>

</html>

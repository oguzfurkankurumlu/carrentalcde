@model RentalDTO

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kiralama İşlemi</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container" style="margin-top: 30px;">
        <h2 class="mb-4">Kiralama İşlemi</h2>
        <form method="post" asp-action="CreateRental">
            <div class="row g-3">
                <div class="col-12">
                    <div class="input-group">
                        <div class="d-flex align-items-center bg-light text-body rounded-start p-2">
                            <span class="fas fa-car"></span>
                            <span class="ms-1">Araç</span>
                        </div>
                        <input class="form-control" type="text" value="@Model.Cars.FirstOrDefault()?.Make @Model.Cars.FirstOrDefault()?.Model" readonly />
                    </div>
                </div>
                <div class="col-12">
                    <div class="input-group">
                        <div class="d-flex align-items-center bg-light text-body rounded-start p-2">
                            <span class="fas fa-calendar-alt"></span>
                            <span class="ms-1">Alış Tarihi</span>
                        </div>
                        <input class="form-control" type="date" name="RentalDate" value="@Model.RentalDate.ToString("yyyy-MM-dd")" readonly />
                        <input class="form-control" type="text" name="RentalTime" value="@Model.RentalTime" readonly />
                    </div>
                </div>
                <div class="col-12">
                    <div class="input-group">
                        <div class="d-flex align-items-center bg-light text-body rounded-start p-2">
                            <span class="fas fa-calendar-alt"></span>
                            <span class="ms-1">Teslim Tarihi</span>
                        </div>
                        <input class="form-control" type="date" name="ReturnDate" value="@Model.ReturnDate.ToString("yyyy-MM-dd")" readonly />
                        <input class="form-control" type="text" name="ReturnTime" value="@Model.ReturnTime" readonly />
                    </div>
                </div>
                <div class="col-12">
                    <div class="input-group">
                        <div class="d-flex align-items-center bg-light text-body rounded-start p-2">
                            <span class="fas fa-map-marker-alt"></span>
                            <span class="ms-1">Alış Ofisi</span>
                        </div>
                        <input class="form-control" type="text" name="PickupOffice" value="@Model.PickupOffice" readonly />
                    </div>
                </div>
                <div class="col-12">
                    <div class="input-group">
                        <div class="d-flex align-items-center bg-light text-body rounded-start p-2">
                            <span class="fas fa-map-marker-alt"></span>
                            <span class="ms-1">Teslim Ofisi</span>
                        </div>
                        <input class="form-control" type="text" name="ReturnOffice" value="@Model.ReturnOffice" readonly />
                    </div>
                </div>
                <div class="col-12">
                    <div class="input-group">
                        <div class="d-flex align-items-center bg-light text-body rounded-start p-2">
                            <span class="fas fa-money-bill-alt"></span>
                            <span class="ms-1">Toplam Ücret</span>
                        </div>
                        <input class="form-control" type="text" name="TotalAmount" value="₺@Model.TotalAmount" readonly />
                    </div>
                </div>
                <div class="col-12">
                    <button class="btn btn-primary w-100 py-2">Kirala</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>